<body>
    @if(TempData["EditTh"]!=null){
        <div id="eroare">
            @TempData["EditTh"]
        </div>
    }
    <div id="header">
        <img id="logo" src="imagini/logoAlb.png">
    </div>
    <div class="sideMenu">
        @if (SignInManager.IsSignedIn(User))
